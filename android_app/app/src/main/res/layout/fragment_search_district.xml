<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/menu_search_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_gravity="center_horizontal"
                android:text="Tìm kiếm theo nhiều khu vực"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/menu_search_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_choice_room"
                    android:text="Loại Phòng"
                    style="@style/title_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:id="@+id/RoomRadioGroup"
                    android:layout_width="match_parent"
                    android:checkedButton="@id/PhongChoThueRadioButton"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioButton
                            android:id="@+id/KiTucXaRadioButton"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kí túc xá" />

                        <RadioButton
                            android:id="@+id/PhongChoThueRadioButton"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phòng cho thuê" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/NhaNguyenCanRadioButton"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nhà Nguyên Căn" />

                        <RadioButton
                            android:id="@+id/CanHoRadioButton"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Căn hộ" />
                    </LinearLayout>

                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_search_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_choice_gender"
                    android:text="Giới Tính"
                    style="@style/title_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioGroup
                    android:id="@+id/GenderRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@id/MaleRadioButton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/MaleRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nam" />

                    <RadioButton
                        android:id="@+id/FemaleRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nữ" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_search_area"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_choice_area"
                    android:text="Khu vực"
                    style="@style/title_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbCamLe"
                        android:layout_width="90dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Cẩm Lệ" />

                    <CheckBox
                        android:id="@+id/cbHaiChau"
                        android:layout_width="90dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Hải Châu" />

                    <CheckBox
                        android:id="@+id/cbLienChieu"
                        android:layout_width="95dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Liên Chiểu"
                        android:checked="true"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbHoaVang"
                        android:layout_width="90dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Hòa Vang" />

                    <CheckBox
                        android:id="@+id/cbSonTra"
                        android:layout_width="90dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Sơn Trà" />

                    <CheckBox
                        android:id="@+id/cbThanhKhe"
                        android:layout_width="95dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Thanh Khê" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <Button
                style="@style/btn_rental"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:background="@drawable/rental_btn"
                android:text="TÌM PHÒNG"
                android:textColor="#FFFFFF"></Button>
            <Button
                style="@style/btn_rental"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="63dp"
                android:background="@drawable/cancel_btn"
                android:text="HỦY"
                android:textColor="#FFFFFF"></Button>
        </LinearLayout>
    </LinearLayout>
</layout>