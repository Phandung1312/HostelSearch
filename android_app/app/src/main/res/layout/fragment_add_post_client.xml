<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="AddPostClientClass">

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.client.addpost.AddPostClientFragment">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_image"
                android:src="@drawable/ic_back_gray"
                android:paddingLeft="10dp"
                android:paddingVertical="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Add Post"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_back"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Enter name"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Address"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_name"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/et_address"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Enter address"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_address" />
            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Area"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_address"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/et_area"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Enter area (m2)"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_area" />
            <TextView
                android:id="@+id/tv_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Capacity"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_area"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/et_capacity"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_image"
                android:gravity="center"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="0"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_capacity"
                app:layout_constraintStart_toEndOf="@+id/btn_sub_capacity"
                app:layout_constraintTop_toBottomOf="@id/tv_capacity"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"/>

            <ImageButton
                android:id="@+id/btn_sub_capacity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_image"
                android:src="@drawable/ic_baseline_remove_gray"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="70dp"
                app:layout_constraintTop_toBottomOf="@id/tv_capacity" />

            <ImageButton
                android:id="@+id/btn_add_capacity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="70dp"
                android:background="@drawable/background_image"
                android:src="@drawable/ic_baseline_add_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_capacity" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Price"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_capacity"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/et_rent_price"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Enter rent price"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price" />

            <EditText
                android:id="@+id/et_electric_price"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Enter electric price"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_rent_price" />
            <EditText
                android:id="@+id/et_deposit_price"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Enter deposit price"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_electric_price" />
            <EditText
                android:id="@+id/et_water_price"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Enter water price"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_deposit_price" />
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_water_price"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:gravity="start"
                android:paddingTop="10dp"
                android:id="@+id/et_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHeight_min="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_description"
                android:hint="Enter description"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description" />
            <TextView
                android:id="@+id/tv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Image"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_description"
                android:layout_marginLeft="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/btn_add_image"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <ImageButton
                android:id="@+id/btn_add_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_image"
                android:src="@drawable/ic_baseline_add_gray"
                app:layout_constraintStart_toEndOf="@id/tv_image"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/et_description" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>