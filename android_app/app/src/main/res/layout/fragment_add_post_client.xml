<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="AddPostClientClass">

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.client.addpost.AddPostClientFragment">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_image"
                android:src="@drawable/ic_back_gray"
                android:paddingLeft="10dp"
                android:paddingVertical="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Thêm bài đăng"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_add_post"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_image"
                android:src="@drawable/ic_baseline_add_gray"
                android:paddingLeft="8dp"
                android:paddingEnd="7dp"
                android:paddingVertical="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tiêu đề"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_back"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Nhập tiêu đề"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tên phòng cho thuê"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_title"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Nhập tên phòng cho thuê"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Địa chỉ "
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_name"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Nhập địa chỉ"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_address" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Diện tích phòng"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_address"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/et_area"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Nhập diện tích phòng (m2)"
                android:inputType="numberDecimal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_area" />

            <TextView
                android:id="@+id/tv_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Số người ở tối đa"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_area"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/et_capacity"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_image"
                android:gravity="center"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="0"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/btn_add_capacity"
                app:layout_constraintStart_toEndOf="@+id/btn_sub_capacity"
                app:layout_constraintTop_toBottomOf="@id/tv_capacity"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp" />

            <ImageButton
                android:id="@+id/btn_sub_capacity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_image"
                android:src="@drawable/ic_baseline_remove_gray"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="70dp"
                app:layout_constraintTop_toBottomOf="@id/tv_capacity" />

            <ImageButton
                android:id="@+id/btn_add_capacity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="70dp"
                android:background="@drawable/background_image"
                android:src="@drawable/ic_baseline_add_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_capacity" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Giá"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_capacity"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/et_rent_price"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Nhập giá thuê"
                android:inputType="numberDecimal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price" />

            <EditText
                android:id="@+id/et_electric_price"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Nhập tiền điện"
                android:inputType="numberDecimal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_rent_price" />

            <EditText
                android:id="@+id/et_deposit_price"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Nhập giá đặt cọc"
                android:inputType="numberDecimal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_electric_price" />

            <EditText
                android:id="@+id/et_water_price"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_image"
                android:hint="Nhập tiền nước"
                android:inputType="numberDecimal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_deposit_price" />

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/et_water_price"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/menu_search_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/title_choice_room"
                    android:text="Loại Phòng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <RadioGroup
                    android:id="@+id/rg_room"
                    android:layout_width="match_parent"
                    android:checkedButton="@id/rb_tro"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/rb_ktx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kí túc xá" />

                    <RadioButton
                        android:id="@+id/rb_tro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Trọ" />

                    <RadioButton
                        android:id="@+id/rb_chung_cu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chung cư" />

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mô tả"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/menu_search_room"
                android:layout_marginLeft="10dp" />

            <EditText
                android:gravity="start"
                android:paddingTop="10dp"
                android:id="@+id/et_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHeight_min="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_description"
                android:hint="Nhập mô tả về trọ"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nội dung"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_description"
                android:layout_marginLeft="10dp" />

            <EditText
                android:gravity="start"
                android:paddingTop="10dp"
                android:id="@+id/et_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHeight_min="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_description"
                android:hint="Nhập nội dung giới thiệu tóm tắt về trọ"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_name_post"
                android:textColorHint="@color/text_name_post"
                android:textCursorDrawable="@drawable/white_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_content" />

            <TextView
                android:id="@+id/tv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ảnh trọ"
                android:textColor="@color/text_name_post"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_content"
                android:layout_marginLeft="10dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/btn_add_image"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <ImageButton
                android:id="@+id/btn_add_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_image"
                android:src="@drawable/ic_baseline_add_gray"
                app:layout_constraintStart_toEndOf="@id/tv_image"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/et_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>