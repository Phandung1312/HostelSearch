<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        
    

           
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/fragment_post_detail_admin_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.admin.post.PostDetailAdminFragment">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_image_post_main"
                android:layout_width="match_parent"
                android:layout_height="518dp"
                app:cardCornerRadius="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/iv_post_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_blue"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_image_post_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/card_view_image_post_main"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp">
                <ImageView
                    android:id="@+id/iv_post_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="+3"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_image_post_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/card_view_image_post_main"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="89dp">
                <ImageView
                    android:id="@+id/iv_post_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_image_post_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/card_view_image_post_main"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="154dp">
                <ImageView
                    android:id="@+id/iv_post_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_image"
                android:src="@drawable/ic_back_gray"
                android:paddingLeft="10dp"
                android:paddingVertical="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"/>
            <ImageButton
                android:id="@+id/btn_remove"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_image"
                android:src="@drawable/ic_baseline_remove_circle_gray"
                app:layout_constraintEnd_toStartOf="@id/btn_favorite"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"/>
            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_image"
                android:backgroundTint="@color/light_blue"
                android:src="@drawable/ic_baseline_favorite_white"
                android:paddingVertical="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_start"
                android:layout_width="95dp"
                android:layout_height="50dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/card_view_image_post_main"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="24dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/green_blue"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:elevation="20dp"
                    android:layout_marginStart="47dp"
                    android:textSize="14sp"
                    android:text="4.9"
                    android:textColor="@color/white"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_baseline_star_yellow"
                    android:elevation="20dp"
                    android:layout_marginStart="24dp"
                    android:layout_gravity="center_vertical"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_name_post"
                android:text="Name"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_view_image_post_main"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="24dp"
                android:id="@+id/tv_name"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/ic_baseline_location_on_gray"
                android:backgroundTint="@color/text_name_post"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="26dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                android:textColor="@color/text_location_post"
                android:text="Location"
                android:layout_marginTop="8dp"
                android:layout_marginStart="38dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_name_post"
                android:text="Money"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_view_image_post_main"
                android:layout_marginTop="14dp"
                android:layout_marginRight="24dp"
                android:id="@+id/tv_money"/>
            <TextView
                android:id="@+id/tv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                android:textColor="@color/text_location_post"
                android:text="Period"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_info"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="90dp"
                android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_view_image_post_main">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white_gray"
                    android:scaleType="centerCrop" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="24dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_name_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85dp"
                    android:elevation="100dp"
                    android:text="Name owner"
                    android:textColor="@color/text_name_post"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp" />
                <ImageButton
                    android:id="@+id/btn_chat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="325dp"
                    android:background="@drawable/ic_baseline_chat_gray"
                    android:layout_gravity="center_vertical"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="Comment"
                android:textColor="@color/text_name_post"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_info"
                android:layout_marginTop="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_comment"
                android:id="@+id/rv_comment"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
         