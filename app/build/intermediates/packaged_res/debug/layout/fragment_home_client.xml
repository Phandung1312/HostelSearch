<?xml version="1.0" encoding="utf-8"?>
                                                                   
    

           
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_home_client_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView
            android:src="@drawable/eclipsehome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/button_notice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="350dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_eclipse_24dp"
            >
            <Button
                android:id="@+id/btn_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/baseline_notifications_none_24"></Button>
            <View
                android:id="@+id/group"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_vector"
                >
            </View>
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            style="@style/title"
            android:layout_width="232dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="70dp"
            android:gravity="top"
            android:lineSpacingExtra="11sp"
            android:text="Hello, Hieu Tran! Tìm kiếm trọ nào!"
            android:translationY="-5.33sp" />

        <EditText
            android:id="@+id/form_search"
            style="@style/text"
            android:drawableStart="@drawable/baseline_search_24"
            android:layout_width="327dp"
            android:paddingLeft="20dp"
            android:hint="Tìm kiếm khu vực, trọ bạn muốn"
            android:drawablePadding="10dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="185dp"
            android:layout_marginEnd="44dp"
            android:background="@drawable/shape_search">
        </EditText>
        <TextView
            android:id="@+id/title_cat"
            android:layout_width="wrap_content"
            style="@style/title_cat"
            android:layout_height="wrap_content"
            android:layout_below="@+id/form_search"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Xu Hướng Tìm Kiếm"
            ></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_rental"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@+id/title_cat"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            />
        <TextView
            android:id="@+id/title_rental"
            android:layout_width="wrap_content"
            style="@style/title_cat"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rcv_rental"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Đề Xuất Cho Bạn"
            ></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_home"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_below="@+id/title_rental"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            />
    </RelativeLayout>
         