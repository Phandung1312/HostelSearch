<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StayFinder" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_orange_bg</item>
    </style>
    <style name="MyButtonTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#FF4081</item>
    </style>
    <style name="title">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/latobold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#252B5C</item>
    </style>
    <style name="text">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#A1A5C1</item>
    </style>
    <style name="title_cat">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/latobold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#252B5C</item>
    </style>
    <style name="name_region">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ralewaybold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#252B5C</item>
    </style>
    <style name="cost_home">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ralewaybold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#8BC83F</item>
    </style>
    <style name="address_home">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ralewaybold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#252B5C</item>
    </style>
    <style name="address_home_detail">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/ralewaybold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#53587A</item>
    </style>
    <style name="btn_rental">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/latobold</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#53587A</item>
    </style>
</resources>