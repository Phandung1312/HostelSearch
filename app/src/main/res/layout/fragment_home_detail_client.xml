<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data class="HomeDetailClient">

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_house"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:src="@drawable/housetest"></ImageView>

        <ImageView
            android:id="@+id/radius_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/radius_back"></ImageView>

        <Button
            android:layout_width="31dp"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/arrow_back"></Button>

        <ImageView
            android:id="@+id/radius_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/shape_favorite"></ImageView>

        <Button
            android:id="@+id/btn_favorite"
            android:layout_width="31dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="19dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/favorite"></Button>
        <ImageView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@+id/btn_favorite"
            android:src="@drawable/radius_back"
            ></ImageView>
        <Button
            android:id="@+id/btn_message"
            android:layout_width="31dp"
            android:layout_height="33dp"
            android:layout_toStartOf="@+id/btn_favorite"
            android:layout_marginRight="28dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/message_btn"></Button>

        <TextView
            android:id="@+id/title_rental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trọ Cho Thuê"
            android:layout_below="@+id/img_house"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            style="@style/title"></TextView>
        <TextView
            android:id="@+id/cost_home"
            android:layout_width="wrap_content"
            style="@style/title"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_house"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/money_24"
            android:text="2 Triệu VND"></TextView>
        <TextView
            android:id="@+id/address_detail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            style="@style/address_home_detail"
            android:layout_below="@+id/title_rental"
            android:text="K502/80 Nguyễn Lương Bằng, Liên Chiểu"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/location_24"></TextView>
        <TextView
            android:id="@+id/cost_elec"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            style="@style/address_home_detail"
            android:layout_below="@+id/address_detail"
            android:text="4k"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/water_cost"></TextView>
        <TextView
            android:id="@+id/cost_water"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            style="@style/address_home_detail"
            android:layout_below="@+id/cost_elec"
            android:text="8k"
            android:drawablePadding="6dp"
            android:drawableStart="@drawable/elec_cost"></TextView>
        <TextView
            android:id="@+id/title_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cost_home"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            style="@style/address_home_detail"
            android:text="1 Tháng"></TextView>
        <TextView
            android:id="@+id/title_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_cost"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            style="@style/address_home_detail"
            android:text="Wifi Miễn phí"></TextView>
        <TextView
            android:id="@+id/tile_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_wifi"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            style="@style/address_home_detail"
            android:text="Diện tích 15m^2"></TextView>
        <Button
            android:layout_width="278dp"
            android:layout_height="63dp"
            style="@style/btn_rental"
            android:background="@drawable/rental_btn"
            android:layout_below="@+id/img_house"
            android:layout_centerInParent="true"
            android:layout_marginTop="200dp"
            android:text="Thuê NGAY"
            android:textColor="#FFFFFF"
            ></Button>
    </RelativeLayout>
</layout>